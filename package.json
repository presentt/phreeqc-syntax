{
  "name": "phreeqc-syntax",
  "version": "0.0.1",
  "publisher": "VitorCantarella",
  "description": "Syntax highlighting and language support for PHREEQC in vscode.",
  "categories": ["Programming Languages", "Formatters"],
  "engines": {
    "vscode": "^1.75.0"
  },
  "contributes": {
    "languages": [{
      "id": "phreeqc",
      "aliases": ["PHREEQC", "phreeqc"],
      "extensions": [".phr", ".ppi", ".pqi", ".phrq", ".dat", ".out"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "phreeqc",
      "scopeName": "source.phreeqc",
      "path": "./phreeqc.tmLanguage.json"
    }],
    "keybindings": [{
      "key": "ctrl+f5",
      "command": "workbench.action.terminal.sendSequence",
      "args": {
        "text": "powershell -Command \"phreeqc '${file}'; code '${file}.out'; if (Test-Path '${file}.sel') { code '${file}.sel' }\"\r"
      },
      "when": "resourceExtname == .phr"
    }]
  },
  "configurationDefaults": {
    "files.encoding": {
      "*.out": "windows1252",
      "*.sel": "windows1252"
    },
    "files.autoGuessEncoding": true
  },
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/vcantarella/phreeqc-syntax"
  },
  "bugs": {
    "url": "https://github.com/vcantarella/phreeqc-syntax/issues"
  },
  "homepage": "https://github.com/vcantarella/phreeqc-syntax#readme",
  "license": "MIT"
}